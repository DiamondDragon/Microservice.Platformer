{
  "Reassure.Bus": {
    "IsEnabled": true,
    "BaseAddress": "http://google.com"
  },

  "Serilog": {
    "MinimumLevel": "Information",

    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.RollingFileAlternate",
      "IntelliFlo.Platform.NetCore"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} [{ThreadId}] {Level:u4} {Message}{NewLine}{Exception}"
        } 
      },
      {
        "Name": "RollingFileAlternate",
        "Args": {
          "logDirectory": "C:\\Logs\\Microservice.Platformer",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} [{ThreadId}] {Level:u4} {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 1,
          "fileSizeLimitBytes": 10485760
        }
      }
    ],
    "Enrich": [
      "WithMachineName",
      "WithThreadId",
      "FromLogContext",
      "FromProcessingContext"
    ],
    "Properties": {
      "Application": "Sample"
    }
  }
}